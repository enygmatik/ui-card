@import 'https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700';

$card-bg-color = #FFFFFF
$transition-time = .20s

*
  box-sizing: border-box

html, body, .container
  width 100%
  height 100%
  background: #f2f2f2
  padding: 0
  margin: 0
  font-family: 'Roboto Condensed', sans-serif

.container
  display: flex
  flex-wrap wrap
  align-items: flex-start
  justify-content: center
  max-width: 1200px
  width: 100%
  margin: 0 auto

.card
  position: relative
  width: 100%
  height: 100%
  max-width: 360px
  max-height: 200px
  min-width: 250px
  margin: 16px
  padding: 20px
  background: $card-bg-color

.card__title
  text-transform uppercase
  text-align: center
  font-weight: 300

.card__paragraph
  text-align: center
  font-weight: 300

.shadow
  position: relative
  transition: transform $transition-time ease-in-out
  will-change transform

  &:before,
  &:after
    content: ''
    display: block
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    transition opacity $transition-time ease-in-out
    will-change: opacity

  &:before
    box-shadow: 0 35px 50px -30px rgba(0, 0, 0, 0.2);

  &:after
    opacity: 0
    box-shadow: 0 55px 50px -17px rgba(0,0,0,.22)

  &:hover
    transform: translateY(-5%)

    &:before
      opacity: 0

    &:after
      opacity: 1

  &:active
    transform: translateY(5%) scale(.9)

    &:before
      opacity: 1

    &:after
      opacity: 0




